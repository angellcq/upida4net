@{
    ViewBag.Title = "Clients";
	ViewBag.ViewModel = "clientListViewmodel.js";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a data-bind="attr: {'href': createLink}">NEW CLIENT</a>&nbsp;|
<h2>Clients</h2>
<span class="error" data-bind="html: $$errors.get()"></span>
<hr />
<table border="1" style="width: 50%;">
<thead>
	<tr class="head">
		<th>ID</th>
		<th>NAME</th>
		<th colspan="3">ACTIONS</th>
	</tr>
</thead>
<tbody data-bind="foreach: clientRows">
	<tr>
		<td data-bind="idtext: id"></td>
		<td data-bind="text: name"></td>
		<td>
			<a data-bind="attr: {'href': ordersLink}">Orders</a>
		</td>
		<td>
			<a data-bind="attr: {'href': newOrderLink}">New Order</a>
		</td>
		<td>
			<input type="button" value="Delete" data-bind="click: $root.onDelete" />
		</td>
	</tr>
</tbody>
</table>